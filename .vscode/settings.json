{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		"**/bower_components": true,
		".awcache": true
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/dist" : true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/node_modules/**": true,
		"**/dist/**": true
	},
	"editor.useTabStops": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false
}
